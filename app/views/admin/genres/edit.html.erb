<div class="container">
 <div class="row">
  <p class="title col-4 offset-1 px-2">ジャンル編集</p>
 </div>
</div>


<%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch, local:true do |f| %>
<div class="row">
 <div class="col-2 offset-1 mt-3">
  <p class="font-weight-bold">ジャンル名</p>
 </div>
 <div class="col-4 mt-3">
  <%= f.text_field :name, size: "30" %>
 </div>
  <%= f.submit :変更を保存, class: 'btn btn-success px-4 py-1' %>
<% end %>
</div>


 


