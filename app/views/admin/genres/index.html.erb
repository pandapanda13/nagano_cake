<div class="container">
 <div class="row">
  <p class="title col-4 offset-1 px-2">ジャンル一覧・追加</p>
 </div>

  <%= form_with model: Genre.new, url:admin_genres_path, local:true do |f| %>
  <div class="row">
   <div class="col-2">
    <p class="font-weight-bold">ジャンル名</p>
   </div>
   <div class="col-4">
    <%= f.text_field :name, size: "30"%>
   </div>
    <%= f.submit :新規登録, class: 'btn btn-success px-4 py-2' %>
  <% end %>
  </div>
 </div>
</div>

<div class="row">
 <div class="col-5 offset-1 mt-4">
  <table class="table">
   <thed>
    <tr class="table-secondary">
     <th>ジャンル</th>
     <th></th>
    </tr>
   </thed>
   <tbody>
   <% @genres.each do |genre| %>
    <tr>
     <td><%= genre.name %></td>
     <td><div class="text-right"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></div></td>
    </tr>
   <% end %>
   </tbody>
  </table>
 </div>
</div>
