<div class="container">
 <div class="row my-2">
  <p class="title col-2 offset-1 px-4">商品詳細</p>
 </div>
 <div class="row mt-5">
  <div class="col-5">
    <%= image_tag @item.image_id, size: "300x240" %>
  </div>
    
  <div class="col-7">
    <p class="item-name">商品名    <%= @item.name %></p>
    <p class="item-name">商品説明    <%= @item.introduction %></p>
    <p class="item-name">ジャンル    <%= @item.genre.name %></p>
    <p class="item-name">税込価格（税抜価格）    <%= @item.add_tax_price.to_s (:delimited) %>
    (
    <%= @item.price.to_s (:delimited) %>)円</p>
    <p class="item-name">販売ステータス
      <% if @item.is_active == true %>
       <%= is_active = "販売中" %>
      <% else %>
       <%= is_active = "販売停止中" %>
      <% end %>
    </p>
   <%= link_to "編集する", edit_admin_item_path(@item.id), class: 'btn btn-success' %>
  </div>
 </div>
</div>











