<div class="container">
 <div class="row">
　<h2>商品一覧</h2>
　<%= link_to new_admin_item_path, class: "btn btn-link form-control text-right" do %>
  ＋
　<% end %>
　<table class="table table-hover table-inverse">
    <thed>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thed>
    <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td><% if item.is_active == true %>
              <%= item.is_active = "販売中" %>
            <% else %>
              <%= item.is_active = "販売停止中" %>
            <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
 </div>
</div>