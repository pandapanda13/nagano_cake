<div class="container">
 <div class="row">
  <p class="title col-4 offset-1 px-2"><%= @customer.full_name %>さんの会員編集</p>
 </div>
</div>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), local:true do |f| %>

<div class="row mt-3">
 <div class="col-2 offset-1">
  <p>会員ID</p>
 </div>
 <div class="col-3">
  <%= @customer.id %>
 </div>
</div>

<div class="row mt-3">
 <div class="col-2 offset-1">
  <p>氏名</p>
 </div>
 <div class="col-2">
  <%= f.text_field :last_name %>
 </div>
 <div class="col-2 ml-2">
  <%= f.text_field :first_name %>
 </div>
</div>

<div class="row mt-3">
 <div class="col-2 offset-1">
  <p>フリガナ</p>
 </div>
 <div class="col-2">
  <%= f.text_field :last_name_kana %>
 </div>
 <div class="col-2 ml-2">
  <%= f.text_field :first_name_kana %>
 </div>
</div>

<div class="row mt-3">
 <div class="col-2 offset-1">
  <p>郵便番号</p>
 </div>
 <div class="col-3">
  <%= f.text_field :postal_code %>
 </div>
</div>

<div class="row mt-3">
 <div class="col-2 offset-1">
  <p>住所</p>
 </div>
 <div class="col-3">
   <%= f.text_field :address, size: "65" %>
 </div>
</div>

<div class="row mt-3">
 <div class="col-2 offset-1">
  <p>電話番号</p>
 </div>
 <div class="col-3">
   <%= f.text_field :telephone_number %>
 </div>
</div>

<div class="row mt-3">
 <div class="col-2 offset-1">
  <p>メールアドレス</p>
 </div>
 <div class="col-3">
   <%= f.text_field :email %>
 </div>
</div>

<div class="row mt-3">
 <div class="col-2 offset-1">
  <p>会員ステータス</p>
 </div>
 <div class="col-3">
   <%= f.radio_button :is_active, true %>
   <%= f.label :is_active,"有効", value: true %>
   <%= f.radio_button :is_active, false %>
   <%= f.label :is_active,"退会", value: false %><br>
 </div>
</div>

<div class="row mt-3">
 <div class="col-3 offset-3">
   <%= f.submit '変更を保存', class: 'btn btn-success px-4 py-2' %>
 </div>
</div>
</div>
<% end %>