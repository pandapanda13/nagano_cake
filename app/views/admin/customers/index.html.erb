<div class="container">
 <div class="row">
　<p class="title col-2 offset-1 px-4">会員一覧</p>
　<table class="table table-hover table-inverse">
    <thed>
      <tr class="table-secondary">
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thed>
    <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
        <td><%= customer.email %></td>
        <td><% if customer.is_active == true %>
              <p class="text-success font-weight-bold"><%= is_active = "有効" %></p>
            <% else %>
              <p class="text-black-50 font-weight-bold"><%= is_active = "退会" %></p>
            <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @customers %>
 </div>
</div>
