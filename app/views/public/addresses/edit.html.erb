<div class="container">
  <div class="row">
   <div class="col-12">
     <p class= "title">配送先編集</p><br>
     <%= form_with model: @address, url: address_path, local:true do |f| %>

      <div class="field">
       <label for="postal_code": class="col-4">郵便番号（ハイフンなし）</label>
       <%= f.text_field :postal_code %>
      </div>

      <div class="field">
       <label for="address": class="col-4">住所</label>
       <%= f.text_field :address, size: "40x45"  %>
      </div>

      <div class="field">
       <label for="name": class="col-4">宛名</label>
       <%= f.text_field :name %>
       <%= f.submit :変更内容を保存, class: 'btn btn-success' %>
      </div>
    <% end %>
   </div>
  </div>
</div>