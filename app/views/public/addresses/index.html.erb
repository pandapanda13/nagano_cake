<div class="container">
  <div class="row">
   <div class="col-12">
     <p class= "title">配送先登録/一覧</p><br>
  </div>
  <%= form_with model: @address, url: addresses_path, local:true do |f| %>
  <div class="row">
   <div class="col-6 offset-1">
    <p class="mr-4">郵便番号(ハイフンなし)</p>
   </div>
   <div class="col-5">
    <%= f.text_field :postal_code %>
   </div>
  </div>

  <div class="row">
   <div class="col-6 offset-1">
    <p class="mr-4">住所</p>
   </div>
   <div class="col-5">
    <%= f.text_field :address, size: "50" %>
   </div>
  </div>

  <div class="row">
   <div class="col-6 offset-1">
    <p class="mr-4">宛名</p>
   </div>
   <div class="col-2">
    <%= f.text_field :name %>
   </div>
   <div class="col-1 offset-2">
    <%= f.submit :新規登録, class: 'btn btn-success ml-5' %>
   </div>
  </div>
  <% end %>
 </div>


  <div class="row">
   <div class="col-11">
    <table class="address-table table-bordered ">
     <thed>
       <tr class="table-active">
        <th class="py-1 px-3">郵便番号</th>
        <th class="py-1 px-3">住所</th>
        <th class="py-1 px-3">宛名</th>
        <th class="py-1 px-3"></th>
       </tr>
     </thed>
     <tbody>
     <% @addresses.each do |address| %>
       <tr>
        <td class="py-2 px-4"><%= address.postal_code %></td>
        <td class="py-2 px-4"><%= address.address %></td>
        <td class="py-2 px-4"><%= address.name %></td>
        <td class="py-2">
         <%= link_to "編集する", edit_address_path(address.id), class: 'btn btn-success mx-1' %>
         <%= link_to "削除する", address_path(address.id), method: :delete, class: 'btn btn-danger' %>
        </td>
       </tr>
     <% end %>
     </tbody>
    </table>
  </div>
 </div>
</div>
