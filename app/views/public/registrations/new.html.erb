<div class="container">
  <div class= "row">
  <div class="col-md-12 ">

   <p class= "title">新規会員登録</p>

   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>


    <div class="field">
      <label for="name": class="col-3">名前</label>
      <label for="first_name": class="col-1">（姓）</label>
      <%= f.text_field :last_name, autofocus: true, autocomplete:  "last_name", class: "col-3" %>
      <label for="last_name": class="col-1">（名）</label>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "col-3" %>
    </div>

    <div class="field">
      <label for="name_kana": class="col-3">フリガナ</label>
      <label for="first_name": class="col-1">（セイ）</label>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete:  "last_name_kana", class: "col-3" %>
      <label for="last_name": class="col-1">（メイ）</label>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "col-3" %>
    </div>


    <div class="field">
      <label for="email": class="col-4">メールアドレス</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-3" %>
    </div>

    <div class="field">
      <label for="email": class="col-4">郵便番号（ハイフンなし）</label>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "col-3" %>
    </div>

    <div class="field">
      <label for="email": class="col-4">住所</label>
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-3" %>
    </div>

    <div class="field">
      <label for="email": class="col-4">電話番号（ハイフンなし）</label>
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "col-3" %>
    </div>

    <div class="field">
      <label for="email": class="col-4">パスワード
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上) </em>
      <% end %></label>
      <%= f.password_field :password, autocomplete: "new-password", class: "col-3" %>
    </div>

    <div class="field">
      <label for="email": class="col-4">パスワード（確認用）</label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-3" %>
    </div>

    <div class="actions">
      <label for="space" class="col-4"></label>
      <%= f.submit :新規登録, class: 'btn btn-success' %>
    </div>
  <% end %>

  <%= render "public/shared/links" %>

   <p class= "title">既に登録済みの方</p><br>
   <%= link_to "こちら", new_customer_session_path %>からログインしてください。


 </div>
</div>
