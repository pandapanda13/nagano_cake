<div class="container">
  <div class="row">
    <p class="title col-3 offset-1 mt-2">注文履歴一覧</p>
  </div>

  <div class="row">
    <div class="col-12 mt-2">
      <table class="order-index-table table-bordered">
        <thed>
          <tr class="table-secondary">
            <th class="py-2 px-2">注文日</th>
            <th class="py-2 px-2">配送先</th>
            <th class="py-2 px-2">注文商品</th>
            <th class="py-2 px-2">支払金額</th>
            <th class="py-2 px-2">ステータス</th>
            <th class="py-2 px-2">注文詳細</th>
          </tr>
        </thed>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td class="py-2 px-2"><%= order.created_at.strftime('%Y年%m月%d日') %></td>
            <td class="py-2 px-2">〒<%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
            <td class="py-2 px-2"><% order.order_details.each do |order| %>
                                   <%= order.item.name %><br>
                                  <% end %> </td>
            <td class="py-2 px-2"><%= order.bill.to_s (:delimited) %>円</td>
            <td class="py-2 px-2"><%= order.order_progress_i18n %></td>
            <td class="py-2 px-2"><%= link_to "注文詳細", order_path(order), class: 'btn btn-success' %></td>

          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
