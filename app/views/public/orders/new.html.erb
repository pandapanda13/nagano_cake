<div class="container">

  <div class="row">
    <p class="title col-3 offset-1 px-5 mt-2">注文情報入力</p>
  </div>

  <%= form_with model: @order, url:orders_confirm_path, local:true do |f| %>
  <div class="row">
    <div class="col-2 mt-1">
      <p class="h5 font-weight-bold">支払い方法</p>
    </div>
  </div>
  <div class="row">
    <div class="col-5 offset-1">
     <%= f.radio_button :payment, 0 %>
     <%= f.label :payment,"クレジットカード", value: 0 %><br>
     <%= f.radio_button :payment, 1 %>
     <%= f.label :payment, "銀行振込", value: 1 %>
    </div>
  </div>

  <div class="row">
    <div class="col-2 mt-1">
      <p class="h5 font-weight-bold">お届け先</p>
    </div>
  </div>
  <div class="row">
    <div class="col-5 offset-1">
      <%= f.radio_button :address_list, 0, checked: "checked" %>
      <%= f.label :address_list_0, "ご自身の住所" %><br>
       <P class="address ml-3">〒<%= current_customer.postal_code %><%= current_customer.address %><br><%= current_customer.full_name %></P>
    </div>
  </div>

  <div class="row">
    <div class="col-5 offset-1">
      <%= f.radio_button :address_list, 1 %>
      <%= f.label :address_List_1, "登録済住所から選択" %><br>
      <%= f.collection_select :address_list_1, @addresses, :id, :address_display %>
    </div>
  </div>

  <div class="row">
    <div class="col-5 offset-1">
      <%= f.radio_button :address_list, 2 %>
      <%= f.label :address_list_2, "新しいお届け先" %><br>
    </div>
  </div>
  <div class="row">
    <div class="col-3 offset-1">
      <p class="ml-3">郵便番号(ハイフンなし)</p>
    </div>
    <div class="col-5">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="row">
    <div class="col-3 offset-1">
      <p class="ml-3">住所</p>
    </div>
    <div class="col-5">
      <%= f.text_field :address, size: "50" %>
    </div>
  </div>
  <div class="row">
    <div class="col-3 offset-1">
      <p class="ml-3">宛名</p>
    </div>
    <div class="col-5">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="row">
    <div class="col-4 offset-4">
      <%= f.submit "確認画面へ進む", class: 'btn btn-success' %>
    </div>
  </div>

  <% end %>
</div>
